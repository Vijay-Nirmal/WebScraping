<Page
    x:Class="WebScraping.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebScraping"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBox Name="InputFilmText" Margin="40,40,40,0" PlaceholderText="Enter Film name (The Dark Knight Rises, Memento)"/>
            <TextBox Name="InputFieldText" Margin="40,40,40,0" PlaceholderText="Enter what information to be searched (Box office, Starring)"/>
            <Button Click="Button_ClickAsync" Content="Click Me" Margin="40,40,40,0"/>
            <TextBlock Name="ResultTextBlock" Text="Hello World" TextWrapping="Wrap" Margin="40" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Page>
